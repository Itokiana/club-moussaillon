<div class="center jumbotron">
  <h1>Liste des membres</h1>
</div>



<div class="shadow mt-5 p-5 col-lg-10 offset-lg-1 bg-light">
  <table class="table table-striped table-dark">
    <thead>
      <tr class="bg-primary">
        <th scope="col">Nom</th>
        <th scope="col">Pr√©noms</th>
        <th scope="col">Email</th>
        <th scope="col">Date d'inscription</th>
      </tr>
    </thead>
    <tbody>

      <%=%>
    
      <% @users.each do |u| %>
      <tr>
        <th scope="row"><%= u.first_name%></th>
        <td><%= u.last_name %></td>
        <td><%= u.email %></td>
        <td><%= Date.parse(u.created_at.to_s).strftime('%a %d %b %Y') %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
